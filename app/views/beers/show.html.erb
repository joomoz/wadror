<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer.name %>
</p>

<p>
  <strong>Style:</strong>
  <%= @beer.style %>
</p>

<p>
  <strong>Brewery:</strong>
  <%= @beer.brewery.name %>
</p>

<p>
  <% if @beer.ratings.empty? %>
    Beer has not yet been rated!
  <% else %>
    Has <%= pluralize(@beer.ratings.size, 'rating') %>, average <%= @beer.average_rating.round(1) %>
  <% end %>
</p>

<% if current_user %>
  <strong>Rate this beer:</strong>
  <%= form_for(@rating) do |f| %>
    <%= f.hidden_field :beer_id %>
    score: <%= f.number_field :score %>
    <%= f.submit %>
  <% end %>
<% end %>

<br>
<%= link_to 'Edit', edit_beer_path(@beer) if current_user %> <br>
<%= link_to 'Delete this beer', @beer, method: :delete, data: { confirm: 'Are you sure?' } if current_user%>
