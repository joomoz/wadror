<h1>Listing Users</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Username</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to user.username, user %>
          <% if user.banned %>
            <span class="label label-info label-xs">account frozen</span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="btn btn-info btn-sm">
  <%= link_to 'New User', new_user_path %>
</div>
