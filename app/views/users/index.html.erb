<h1>Users</h1>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th>Username</th>
      <th> rated beers </th>
      <th> total ratings </th>
      <th> favorite beer </th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><%= user.beers.size %></td>
        <td><%= user.ratings.size %></td>
        <td><%= user.favorite_beer %></td>
        <td>
          <% if user.banned %>
            <span class="label label-info label-xs">account frozen</span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="btn btn-info btn-sm">
  <%= link_to 'New User', new_user_path %>
</div>
