<h2><%= @place.name %></h2>

<p>
  <strong>Address:</strong>
  <%= @place.street %>, <%= @place.zip %> <%= @place.city %>, <%= @place.country %>
</p>
<p>
  <strong>Phone:</strong>
  <%= @place.phone %>
</p>

<div class="google-maps">
  <iframe src="//www.google.com/maps/embed/v1/place?q=<%= @place.name %>,<%= @place.street %>,<%= @place.city %>,<%= @place.country %>
      &zoom=14
      &key=<%= ENV['GOOGLE_API_KEY'] %>"
      width="600" height="450"
      frameborder="0">
  </iframe>
</div>
